@model StudentRegistrationBureauMVC.Models.StudentVM

@{
    ViewData["Title"] = "Student Details";
}

<div>
    <h4>Student Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacultyNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FacultyNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FacultyId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Faculty!.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MajorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Major!.Name)
        </dd>
        <a asp-action="Index" asp-controller="Enrollments" asp-route-Filter.FacultyNumber="@Model?.FacultyNumber">See grades</a>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
