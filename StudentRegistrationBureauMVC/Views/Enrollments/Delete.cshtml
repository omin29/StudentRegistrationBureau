@model StudentRegistrationBureauMVC.Models.EnrollmentVM

@{
    ViewData["Title"] = "Delete Enrollment";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Enrollment</h4>
    <hr />

    @if (ViewData["ErrorMessage"] != null)
    {
        <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>
    }

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentFullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstName)
            @Html.DisplayFor(model => model.Student.MiddleName)
            @Html.DisplayFor(model => model.Student.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.FacultyNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.FacultyNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Grade != null)
            {
                @Html.DisplayFor(model => model.Grade)
            }
            else
            {
                @Html.Raw("Not Graded")
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>