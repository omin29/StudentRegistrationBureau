@model StudentRegistrationBureauMVC.Models.EnrollmentVM

@{
    ViewData["Title"] = "Edit Enrollment";
}

<h1>Edit</h1>

<h4>Enrolled Student</h4>
<hr />

@if (ViewData["ErrorMessage"] != null)
{
    <h4 class="text-danger">@ViewData["ErrorMessage"]</h4>
}

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.StudentFullName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.StudentFullName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.FacultyNumber)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.FacultyNumber)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CourseName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.CourseName)
    </dd>
</dl>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <select asp-for="Grade" class="form-control">
                    <!option value="">Not Graded</!option> <!-- This will set Grade to null -->
                    <!option value="2" @(Model.Grade == 2 ? "selected" : "")>2</!option>
                    <!option value="3" @(Model.Grade == 3 ? "selected" : "")>3</!option>
                    <!option value="4" @(Model.Grade == 4 ? "selected" : "")>4</!option>
                    <!option value="5" @(Model.Grade == 5 ? "selected" : "")>5</!option>
                    <!option value="6" @(Model.Grade == 6 ? "selected" : "")>6</!option>
                </select>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}